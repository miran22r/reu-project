import numpy as np
import csv
import os
import string


class load_data:

	def __init__(self):
		self.reviews = []
		self.test = []
		self.sent1_words = []
		self.sent2_words = []

	def load_files(self, inputFile, boolean):
		print 'Currently building our vocabulary'
		with open(inputFile, mode='r',buffering=-1) as f:
			files = f.readlines()
		for review in files:
			review = review.translate(None, ':')
			review = review.translate(None, '01234567')
		#	review = review.translate(None,'#')
			review = review.split(' ')
			if boolean == True:
				self.sent1_words.extend(review)
			if boolean == False:
				self.sent2_words.extend(review)

	def load_test(self, testFile):
		with open(testFile, mode='r',buffering=-1) as f:
			files = f.readlines()
		for review in files:
			review = review.translate(None, ':')
			review = review.translate(None, '01234567')
		#	review = review.translate(None,'#')
			review = review.split(' ')
			test = self.test
			test.extend(review)
		len(test)	
		return test
	# load
	def build_train(self):
		rev = self.reviews
		rev.extend(self.sent1_words)
		rev.extend(self.sent2_words)

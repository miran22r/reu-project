import build

fileName1 = ""
fileName2 = ""
testFile = ""
sentiment1 = ""
sentiment2 = ""

print sys.argv[0]
print sys.argv[1]	
print sys.argv[2]
print sys.argv[3]
print sys.argv[4]
print sys.argv[5]
		
if len(sys.argv) < 5:
	print 'Sorry, but you input the wrong amount of arguments.'
	sys.exit()
else:
	fileName1 = sys.argv[1]
	fileName2 = sys.argv[2]
	testFile = sys.argv[3]	
	sentiment1 = sys.argv[4]
	sentiment2 = sys.argv[5]

#build()
load_data.load_files(fileName1, True)
load_data.reviews = []
load_data.load_files(fileName2, False)
load_data.build_train()
build.build_answers(sentiment1, sentiment2, load_data.sent1_words, load_data.sent2_words)
build.fit(classify.classifier, load_data.reviews, build.answers)	
load_data.load_files(testFile)
build.add_answers(sentiment1, sentiment2)
classify.classify(load_data.test)
accuracy.check_accuracy(classify.predicted, build.guesses)

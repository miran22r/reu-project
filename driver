import numpy as np
import csv
import os
import sys
from accuracy import *
from build import *
from classify iport *
from load_data import *

# files
fileName1 = ""
fileName2 = ""
testFile = ""
sentiment1 = ""
sentiment2 = ""

print sys.argv[0]
print sys.argv[1]	
print sys.argv[2]
print sys.argv[3]
print sys.argv[4]
print sys.argv[5]
	
# get input arguements	
if len(sys.argv) < 5:
	print 'Sorry, but you input the wrong amount of arguments.'
	sys.exit()
else:
	fileName1 = sys.argv[1]
	fileName2 = sys.argv[2]
	testFile = sys.argv[3]	
	sentiment1 = sys.argv[4]
	sentiment2 = sys.argv[5]

# build()
loader = load_data()
loader.load_files(fileName1, True)
loader.reviews = []
loader.load_files(fileName2, False)
loader.build_train()
builder = builder()
classify = classify()
builder.build_answers(sentiment1, sentiment2, loader.sent1_words(), loader.sent2_words())
builder.fit(classify.classifier(), loader.reviews(), builder.answers())	
loader.load_files(testFile)
builder.add_answers(sentiment1, sentiment2)

classify.classify(loader.test())
accur = accuracy()
accur.check_accuracy(classify.predicted(), builder.guesses())
